<% model ||= nil %>
<% path ||= nil %>
<div class="flex-center page-default-height">
  <article>
    <header>
      <span class="flex-center">
        <h3 class="margin-reset margin-default-right"><%= title %></h3>
        <%= link_to "Back to root",
          root_path,
          role: :button,
          class: "secondary outline" unless defined?(remove_back_btn)
        %>
      </span>
    </header>
    <div>
      <%= form_with model: model, url: path do |f| %>
        <%= yield f %>
        <br>
        <div>
          <%= f.submit submit_title, class: "outline"%>
        </div>
      <% end %>
    </div>
    <% unless content_for(:footer_content).blank? %>
      <footer>
        <%= yield :footer_content %>
      </footer>
    <% end %>
  </article>
</div>
