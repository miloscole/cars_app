<%= render "shared/auth/form",
  title: "Log in to #{APP_NAME}",
  remove_back_btn: true,
  path: sessions_path,
  submit_title: "Login" do |f|
%>
  <div>
    <%= f.label :login %>
    <%= f.text_field :login, required: true%>
  </div>
  <div >
    <%= f.label :password %>
    <%= f.password_field :password, required: true, autocomplete: "new-password" %>
  </div>
  <div>
    <%= link_to "Forgot your password?", password_reset_path %>
  </div>
  <% content_for :footer do %>
    <span class="minimal-padding">Are you here for the first time?</span>
    <%= link_to "Create your account", new_user_path %>
  <% end %>
<% end %>
