<div class="container">
    <%= render 'shared/flash' %>
    <h3>Customers</h3>
    <%= content_tag :a, "Add New", href: new_customer_path, role: "button" %>
    <table>
        <thead>
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Notes</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @customers.each do |customer| %>
                <tr>
                    <td><%= customer.first_name %></td>
                    <td><%= customer.last_name %></td>
                    <td><%= customer.notes %></td>
                    <td><%= customer.email %></td>
                    <td><%= customer.phone %></td>
                    <td><%= render "shared/table-dd", id: customer.id %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
