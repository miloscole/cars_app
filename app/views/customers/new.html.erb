<% if request.headers["Turbo-Frame"] %>
  <%= turbo_frame_tag "add_new_modal" do %>
    <dialog open data-controller="modal">
      <span class="flex-center">
        <%= render 'shared/main/form', object: @customer %>
      </span>
    </dialog>
  <% end %>
<% else %>
  <%= render 'shared/main/form', object: @customer %>
<% end %>
